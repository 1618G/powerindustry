# ZZA Build - Production Environment Variables
# Copy to .env and fill in values. DO NOT commit secrets.

# ============================================
# Application
# ============================================
APP_NAME=myapp
APP_VERSION=1.0.0
DOMAIN=myapp.example.com
ACME_EMAIL=ssl@example.com

# ============================================
# Docker Image
# ============================================
IMAGE_NAME=myapp
IMAGE_TAG=latest

# ============================================
# Database
# ============================================
DB_USER=app
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_NAME=myapp_prod

# ============================================
# Security (generate with: openssl rand -hex 32)
# ============================================
SESSION_SECRET=
ENCRYPTION_KEY=

# ============================================
# Stripe
# ============================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Email
# ============================================
SENDGRID_API_KEY=
EMAIL_FROM=noreply@example.com

# ============================================
# AI (optional)
# ============================================
OPENAI_API_KEY=

# ============================================
# Observability
# ============================================
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
METRICS_TOKEN=CHANGE_ME_METRICS_TOKEN
SENTRY_DSN=
LOG_LEVEL=info

# ============================================
# Traefik
# ============================================
TRAEFIK_LOG_LEVEL=INFO
