{
  "name": "powerindustry",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage",
    "test:coverage": "vitest --coverage",
    "test:routes": "tsx scripts/test-routes.ts",
    "test:routes:verbose": "tsx scripts/test-routes.ts --verbose",
    "test:routes:public": "tsx scripts/test-routes.ts --public --verbose",
    "test:routes:missing": "tsx scripts/test-routes.ts --missing --verbose",
    "detect-stubs": "tsx scripts/detect-stubs.ts",
    "detect-stubs:strict": "tsx scripts/detect-stubs.ts --strict",
    "validate-gates": "tsx scripts/validate-gates.ts",
    "validate-gates:strict": "tsx scripts/validate-gates.ts --strict",
    "validate-gates:update": "tsx scripts/validate-gates.ts --update",
    "preflight": "tsx scripts/validate-gates.ts --phase 0",
    "phase1:check": "tsx scripts/validate-gates.ts --phase 1",
    "phase2:check": "tsx scripts/validate-gates.ts --phase 2 && pnpm detect-stubs:strict",
    "screenshots": "tsx scripts/capture-screenshots.ts",
    "screenshots:mobile": "tsx scripts/capture-screenshots.ts --mobile",
    "perf:check": "tsx scripts/performance-budget.ts",
    "perf:check:strict": "tsx scripts/performance-budget.ts --strict",
    "a11y:check": "tsx scripts/accessibility-check.ts",
    "a11y:check:strict": "tsx scripts/accessibility-check.ts --strict",
    "api:test": "tsx scripts/api-contract-test.ts",
    "api:test:strict": "tsx scripts/api-contract-test.ts --strict",
    "api:generate": "tsx scripts/api-contract-test.ts --generate",
    "backup:verify": "tsx scripts/verify-backup.ts",
    "backup:verify:full": "tsx scripts/verify-backup.ts --full",
    "dead-code": "tsx scripts/dead-code-detector.ts",
    "dead-code:check": "tsx scripts/dead-code-detector.ts --check",
    "qa:full": "pnpm validate-gates && pnpm detect-stubs:strict && pnpm perf:check && pnpm a11y:check && pnpm api:test",
    "prepare": "husky install",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "worker": "tsx scripts/worker.ts",
    "jobs:worker": "tsx scripts/job-worker.ts",
    "email:worker": "tsx scripts/email-worker.ts",
    "compliance:cleanup": "tsx scripts/cleanup-expired-data.ts",
    "compliance:report": "tsx scripts/generate-compliance-report.ts",
    "security:audit": "npm audit && npx snyk test",
    "security:headers": "tsx scripts/check-security-headers.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@google-cloud/storage": "^7.7.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.44.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.50.0",
    "@opentelemetry/resources": "^1.23.0",
    "@opentelemetry/sdk-metrics": "^1.23.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/semantic-conventions": "^1.23.0",
    "@prisma/client": "^5.8.0",
    "@remix-run/node": "^2.5.0",
    "@remix-run/react": "^2.5.0",
    "@remix-run/serve": "^2.5.0",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^7.100.0",
    "argon2": "^0.40.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "dompurify": "^3.0.8",
    "googleapis": "^130.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "isbot": "^4.4.0",
    "jsdom": "^24.0.0",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.8",
    "pg-boss": "^9.0.3",
    "pino": "^8.18.0",
    "pino-pretty": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rate-limiter-flexible": "^5.0.0",
    "sharp": "^0.33.2",
    "stripe": "^14.12.0",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "@remix-run/dev": "^2.5.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^5.8.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
